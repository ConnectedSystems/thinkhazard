{% extends "base.jinja2" %}

{% from 'navbar.jinja2' import navbar%}

{% block name %}index{% endblock %}

{% block content %}
  <nav class="navbar navbar-default">
    <div class="container">
      <div id="navbar" class="navbar-collapse collapse">
      {{ navbar() }}
      </div>
    </div>
  </nav>
  <div class="container">
    <header class="text-center">
      <img src="{{('thinkhazard:static/images/logo-big.png'|static_url)}}" title="Think hazard - Overcome risk" alt="Think hazard - Overcome risk" />
      <h3>Identify the hazards in your project area and receive guidance on how to handle them</h3>
    </header>
  </div>
  <div class="search-pane container-fluid">
    <div class="form-group col-md-6 col-md-offset-3 form-group-lg">
      <form id="search" class="search">
        {% include 'search.jinja2' %}
      </form>
    </div>
  </div>
  <div class="container text-center">
    <ul class="hazard-types-list horizontal list-unstyled">
      {% for hazard in hazards %}
      <li class="no-data text-center ">
        <i class="fa hazard-icon icon-{{ hazard.title|lower|replace(' ', '') }}"></i><br>
          {{ hazard.title }}
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="container text-center">
    <div class="title-header">
      <a href="//www.gfdrr.org" class="logo-gfdrr" alt="GFRR" title="GFDRR"></a>
    </div>
  </div>
{% endblock %}
